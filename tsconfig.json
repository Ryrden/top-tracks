{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["dom", "es6"],
        "rootDir": "./src",
        "outDir": "./dist",
        "skipLibCheck": true,
        "sourceMap": true,
        "allowJs": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "exclude": ["node_modules", "dist"],
    "include": ["./src/**/*.ts", "tests/**/*.spec.ts"],
    "files": ["./src/index.ts"]
}
